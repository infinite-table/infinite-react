{
  "manifest_version": 3,
  "name": "Infinite Table DevTools Extension",
  "version": "1.0",
  "description": "A Chrome extension for Infinite Table",
  "permissions": ["activeTab"],
  "devtools_page": "chrometools/devtools.html",

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.ico"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.ico"
  }
}
