{
  "manifest_version": 3,
  "name": "Infinite Table DevTools Extension",
  "version": "1.0",
  "description": "A Chrome extension for Infinite Table",
  "permissions": ["activeTab", "scripting", "storage"],
  "devtools_page": "./src/index.html",

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.ico"
    }
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost/*", "https://infinite-table.com/*"],
      "js": ["./src/content.ts"],
      "css": ["./src/content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.ico"
  }
}
